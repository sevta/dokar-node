<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title></title>
  <link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
</head>
<body>
  <h1>admin</h1>

  <form action="/csv" method='post' enctype="multipart/form-data">
    <input type="file" class='file' name='csv' accept=".csv">
    <button type='submit'>upload</button>
  </form>


  <hr>

  <form action="/seedusers" , method="post">
    <button type="submit">seed new users</button>
  </form>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Upload Arsip disini</h1>
          <form action="/archive" method='post' enctype="multipart/form-data" class='form'>
            <div class="form-group">  
              <input type="file" class='file' name='archive' accept=".csv" class='form-control'>
            </div>
            <div class="form-group">  
              <button class="btn btn-primary">Upload</button>
            </div>
          </form>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <table class="table">
          <thead>
            <tr>
              <th>No</th>
              <th>masalah</th>
              <th>jenis naskah</th>
              <th>pejabat penanda tngan</th>
              <th>jumlah berkas</th>
              <th>tingkat perkembangan</th>
              <th>uploader</th>
            </tr>
          </thead>
          <tbody>
            <% archive.map(function(obj , i) { %>
              <tr>
                <td><%= i+1%></td>
                <td><%= obj.masalah%></td>
                <td><%= obj.jenis_naskah%></td>
                <td><%= obj.pejabat_penanda_tangan%></td>
                <td><%= obj.jumlah_berkas%></td>
                <td><%= obj.tingkat_perkembangan%></td>
                <td><%= obj.user_id.username%></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <ul>
    <% user.map(function(users, i) { %>
      <li><%= users.username%></li>
    <%})%> 
  </ul>
</body>
</html>