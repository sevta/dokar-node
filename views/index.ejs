  <script>
    $(document).ready(function() {

      var active = false

      $('#n-home').fullpage({
        verticalCentered: false,
        afterLoad: function(index) {
          console.log(index)
        } ,
        onLeave: function(index , nextIndex , direction) {
          console.log(nextIndex)
          $('.title-center-2').removeClass('active')
        }
      })

      $('.slider-text').slick({
        arrows: false ,
        dots: false
      })

      $('.ml11 .letters').each(function(){
        $(this).html($(this).text().replace(/([^\x00-\x80]|\w)/g, "<span class='letter'>$&</span>"));
      });
    
      $('.burger-menu').on('click' , function() {
        $(this).toggleClass('active')
        $('.navbar-menu').toggleClass('active')
        $('#n-home').toggleClass('active')
        active = !active
      })

      $('.login-nav').on('click' , function() {
        $('.popup-login').toggleClass('active')
      })

      $('.popup-login').on('click' , function() {
        $(this).removeClass('active')
      })

      $('.popup-login--center').on('click' , function(evt) {
        evt.stopPropagation()
      })
      
  
      animateLettering()
      gradientBG()
      // moveBackground('.background')

      function animateLettering() {
        anime.timeline({loop: true})
          .add({
            targets: '.ml11 .line',
            scaleY: [0,1],
            opacity: [0.5,1],
            easing: "easeOutExpo",
            duration: 700
          })
          .add({
            targets: '.ml11 .line',
            translateX: [0,$(".ml11 .letters").width()],
            easing: "easeOutExpo",
            duration: 700,
            delay: 100
          }).add({
            targets: '.ml11 .letter',
            opacity: [0,1],
            easing: "easeOutExpo",
            duration: 600,
            offset: '-=775',
            delay: function(el, i) {
              return 34 * (i+1)
            }
          }).add({
            targets: '.ml11',
            opacity: 0,
            duration: 1000,
            easing: "easeOutExpo",
            delay: 1000
          });
      }

      function moveBackground($el) {
        var x = 0;
        setInterval(function(){
            x-=.1;
            $($el).css('background-position', x + 'px 0');
        }, 1);
      }

      function gradientBG() {
        var granim = new Granim({
          element: '#gradient-bg' ,
          name: 'basic-gradient' ,
          direction: 'left-right' ,
          opacity: [1 , 1] ,
          states: {
            "default-state" : {
              gradients: [
                ['#FB6900', '#FF842B'],
                // ['#02AAB0', '#00CDAC'],
                ['#FF3204' , '#FF8F3E'] ,
                ['#DA22FF', '#9733EE']
              ]
            }
          }
        })
      }
    })
